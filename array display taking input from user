#include<stdio.h>
#define size 5

void display(int *arr){
     for(int i = 0; i < size ; i++)
        printf("Element[%d] = %d\n", i, arr[i]);
}
int main()
{
    int arr[size];
    for(int i = 0; i < size; i++){
        printf("Input a number at index %d: ", i);
        scanf("%d", &arr[i]);
    }
    display(arr);
}
